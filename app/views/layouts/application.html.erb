<!DOCTYPE html>
<html>
<head>
  <title>DotaQuantify</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <%= link_to "Dashboard", '/' %> |
  <%= link_to "Matches", matches_path %> |
  <%= link_to "Parties", parties_path %> |
  <%= link_to "Players", profiles_path %> |
  <%= link_to "Performances", players_path %>
  | &mdash; |
  <%= link_to "Update", fetch_recent_matches_path, id: "update-button" %>
</nav>

<% if flash[:notice] %><p><%= flash[:notice] %></p><% end %>
<% if flash[:error] %><p><%= flash[:error] %></p><% end %>

<%= yield %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= yield :bottom %>
</body>
</html>
