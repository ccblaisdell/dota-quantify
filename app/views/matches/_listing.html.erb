<div class="match">
  <%= link_to match, class: "match-link" do %>
    <%= match_outcome match %>
    <%= match_time match %>
    <%= match_mode match %>
  <% end %>

  <% for player in match.followed_players %>
    <div class="player">
      <%= player_hero_avatar player %>
      <%= link_to player.profile, class: "player-link" do %>
        <%= avatar player.profile %>
        <%= player.name %>
      <% end %>
      <%= player_kda player %>
    </div>
  <% end %>
</div>
