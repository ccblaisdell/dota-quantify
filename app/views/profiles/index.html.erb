<h1>Listing profiles</h1>

<%= render partial: "find" %>

<table>
  <thead>
    <tr>
      <th>★</th>
      <th>Name</th>
      <th>Steam Id</th>
      <th>Dota Id</th>
      <th>Last match</th>
      <th>War</th>
      <th>Match count</th>
      <th>Wins</th>
      <th>Losses</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= "★" if profile.follow? %></td>
        <td><%= profile.name %></td>
        <td><%= profile.steam_account_id %></td>
        <td><%= profile.dota_account_id %></td>
        <td><%= profile.last_match %></td>
        <td><%= profile.war %></td>
        <td><%= profile.match_count %></td>
        <td><%= profile.wins %></td>
        <td><%= profile.losses %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

